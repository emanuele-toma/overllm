{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "overllm",
  "version": "0.2.0",
  "identifier": "com.overllm.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OverLLM",
        "width": 800,
        "height": 600,
        "transparent": true,
        "decorations": true,
        "fullscreen": true,
        "alwaysOnTop": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
